{
  "name": "tip-tap-element",
  "version": "1.0.0",
  "description": "A predefined TipTap Rich Text Editor",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/tip-tap-element.cjs",
  "module": "dist/tip-tap-element.js",
  "scripts": {
    "prebuild": "test \"$CI\" = true && npx pnpm install -r --store=node_modules/.pnpm-store || echo skipping pnpm install",
    "build": "rm -rf dist && rollup -c",
    "start:example": "web-dev-server",
    "build:example": "npx pnpm build && rm -rf examples/dist && cp -R dist/ examples/dist",
    "start": "rm -rf dist/ && rollup -wc",
    "deploy": "pnpm build && standard-version --release-as",
    "deploy:beta": "pnpm build && standard-version --prerelease beta",
    "deploy:patch": "pnpm build && standard-version --release-as patch",
    "deploy:minor": "pnpm build && standard-version --release-as minor",
    "deploy:major": "pnpm build && standard-version --release-as major",
    "push": "git push --follow-tags origin main && pnpm publish"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "tiptap",
    "richtext",
    "editor",
    "wysiwg",
    "webcomponents"
  ],
  "author": "paramagicdev",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@web/dev-server": "^0.1.32",
    "@web/dev-server-esbuild": "^0.3.1",
    "rollup": "^2.75.7",
    "rollup-plugin-gzip": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "typescript": "^4.7.4",
    "zlib": "^1.0.5"
  },
  "dependencies": {
    "@rails/activestorage": "^6.0.5",
    "@tiptap/core": "^2.0.0-beta.174",
    "@tiptap/extension-focus": "^2.0.0-beta.40",
    "@tiptap/extension-image": "^2.0.0-beta.27",
    "@tiptap/extension-link": "^2.0.0-beta.36",
    "@tiptap/extension-placeholder": "^2.0.0-beta.48",
    "@tiptap/starter-kit": "^2.0.0-beta.183",
    "lit": "^2.2.7",
    "prosemirror-state": "^1.3.4",
    "role-components": "^1.0.5"
  }
}
