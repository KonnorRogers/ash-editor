{
  "name": "tip-tap-element",
  "version": "1.0.0",
  "description": "A predefined TipTap Rich Text Editor",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/bundle/index.common.js",
  "module": "dist/bundle/index.module.js",
  "scripts": {
    "build": "rm -rf dist && pnpm build:types && node esbuild.config.js",
    "build:types": "tsc",
    "lint": "ts-standard src/",
    "fix": "ts-standard src/ --fix",
    "test:ci": "pnpm test",
    "test": "pnpm build && cd tests/rails && bundle exec rails test:all",
    "start:example": "web-dev-server",
    "build:example": "pnpm build && rm -rf examples/dist && cp -R dist/ examples/dist",
    "start": "pnpm build -- --watch",
    "deploy": "pnpm build && standard-version --release-as",
    "deploy:beta": "pnpm build && standard-version --prerelease beta",
    "deploy:patch": "pnpm build && standard-version --release-as patch",
    "deploy:minor": "pnpm build && standard-version --release-as minor",
    "deploy:major": "pnpm build && standard-version --release-as major",
    "push": "git push --follow-tags origin main && pnpm publish"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "tiptap",
    "richtext",
    "editor",
    "wysiwg",
    "webcomponents"
  ],
  "author": "paramagicdev",
  "license": "MIT",
  "devDependencies": {
    "@types/rails__activestorage": "^7.0.1",
    "@typescript-eslint/parser": "^4.0.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-esbuild": "^0.3.2",
    "esbuild": "^0.14.54",
    "eslint": "^7",
    "glob": "^8.0.3",
    "standard-version": "^9.5.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@rails/activestorage": "^6",
    "@tiptap/core": "2.0.0-beta.196",
    "@tiptap/extension-focus": "2.0.0-beta.196",
    "@tiptap/extension-image": "2.0.0-beta.196",
    "@tiptap/extension-link": "2.0.0-beta.196",
    "@tiptap/extension-placeholder": "2.0.0-beta.196",
    "@tiptap/starter-kit": "2.0.0-beta.196",
    "lit": "^2.3.1",
    "prosemirror-model": "^1.18.1",
    "prosemirror-state": "^1.4.1",
    "role-components": "^1.0.6",
    "spark-md5": "^3.0.2",
    "tslib": "^2.4.0"
  }
}
